#!/bin/bash
# deploy-django.sh

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Deploying Django Messaging App on Kubernetes...${NC}"
echo "=============================================="

# Step 1: Create namespace (optional)
echo -e "\n1. Creating namespace..."
kubectl create namespace django-app 2>/dev/null || echo "Namespace already exists"
kubectl config set-context --current --namespace=django-app

# Step 2: Create ConfigMap
echo -e "\n2. Creating ConfigMap..."
kubectl apply -f kubernetes/configmap.yaml

# Step 3: Create Secret
echo -e "\n3. Creating Secret..."
kubectl apply -f kubernetes/secret.yaml

# Step 4: Apply Deployment and Service
echo -e "\n4. Deploying Django application..."
kubectl apply -f kubernetes/deployment.yaml

# Step 5: Wait for pods to be ready
echo -e "\n5. Waiting for pods to be ready..."
sleep 5
kubectl wait --for=condition=ready pod -l app=django-messaging --timeout=120s

# Step 6: Verify deployment
echo -e "\n6. Verifying deployment..."
echo -e "${GREEN}Deployment Status:${NC}"
kubectl get deployments

echo -e "\n${GREEN}Pod Status:${NC}"
kubectl get pods -l app=django-messaging -o wide

echo -e "\n${GREEN}Service Status:${NC}"
kubectl get services django-service

# Step 7: Check logs
echo -e "\n7. Checking application logs..."
POD_NAME=$(kubectl get pods -l app=django-messaging -o jsonpath='{.items[0].metadata.name}')
echo -e "${YELLOW}Logs from pod: $POD_NAME${NC}"
kubectl logs $POD_NAME --tail=20

# Step 8: Port-forward for testing (optional)
echo -e "\n8. Setting up port-forward for testing..."
echo -e "${YELLOW}Access the app at: http://localhost:8000${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop port-forwarding${NC}"
kubectl port-forward service/django-service 8000:8000

echo -e "\n${GREEN}Deployment completed successfully!${NC}"
