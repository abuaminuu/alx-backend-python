{
  "info": {
    "name": "Messaging API Tests",
    "description": "Comprehensive test suite for Messaging API including authentication, conversations, messages, and security",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Get JWT Token - User1",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has access and refresh tokens\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('access');",
                  "    pm.expect(jsonData).to.have.property('refresh');",
                  "});",
                  "",
                  "pm.test(\"Set access token for user1\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"user1_token\", jsonData.access);",
                  "    pm.environment.set(\"access_token\", jsonData.access);",
                  "    pm.environment.set(\"refresh_token\", jsonData.refresh);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"user1\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get JWT Token - User2",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"User2 token obtained\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Set access token for user2\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"user2_token\", jsonData.access);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"user2\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", ""]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", "refresh", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "üí¨ Conversations",
      "item": [
        {
          "name": "Create Conversation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Conversation created successfully\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Save conversation ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.environment.set(\"conversation_id\", jsonData.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"participants\": [2]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/conversations/",
              "host": ["{{base_url}}"],
              "path": ["api", "conversations", ""]
            }
          },
          "response": []
        },
        {
          "name": "List Conversations",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Get conversations successfully\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has conversations data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('results');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/conversations/",
              "host": ["{{base_url}}"],
              "path": ["api", "conversations", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get Conversation Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Get conversation details\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Correct conversation returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.equal(pm.environment.get(\"conversation_id\"));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/conversations/{{conversation_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "conversations", "{{conversation_id}}", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "‚úâÔ∏è Messages",
      "item": [
        {
          "name": "Send Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Message sent successfully\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Save message ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.environment.set(\"message_id\", jsonData.id);",
                  "});",
                  "",
                  "pm.test(\"Message has correct content\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.content).to.include(\"Hello from User1\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"conversation\": {{conversation_id}},\n    \"content\": \"Hello from User1! This is a test message.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/messages/",
              "host": ["{{base_url}}"],
              "path": ["api", "messages", ""]
            }
          },
          "response": []
        },
        {
          "name": "List Messages with Pagination",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Messages retrieved with pagination\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Pagination data present\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('count');",
                  "    pm.expect(jsonData).to.have.property('results');",
                  "});",
                  "",
                  "pm.test(\"20 messages per page\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.results.length).to.be.at.most(20);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/messages/?page=1&page_size=20",
              "host": ["{{base_url}}"],
              "path": ["api", "messages", ""],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Filter Messages by Conversation",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{user1_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/messages/?conversation={{conversation_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "messages", ""],
              "query": [
                {
                  "key": "conversation",
                  "value": "{{conversation_id}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
