        {
          "name": "Update Other User's Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Cannot update other user's message\", function () {",
                  "    pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{user2_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"content\": \"Trying to update someone else's message\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/messages/{{message_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "messages", "{{message_id}}", ""]
            }
          },
          "response": []
        }
      ]
