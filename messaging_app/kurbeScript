#!/bin/bash

# Task 0: Install Kubernetes and Set Up a Local Cluster
# Script: kurbeScript
# Objective: Start a Kubernetes cluster and verify it's running

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
CLUSTER_NAME="local-k8s-cluster"
K8S_VERSION="v1.27.3"
NODE_COUNT=1
CPU="2"
MEMORY="4096" # MB
DISK_SIZE="20g"

# Logging function
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to check if a command exists
check_command() {
    if ! command -v "$1" &> /dev/null; then
        log_error "$1 is not installed or not in PATH"
        return 1
    fi
    return 0
}

# Function to check system requirements
check_system_requirements() {
    log_info "Checking system requirements..."
    
    # Check OS
    OS=$(uname -s)
    if [[ "$OS" != "Linux" && "$OS" != "Darwin" ]]; then
        log_error "Unsupported OS: $OS. This script supports Linux and macOS."
        return 1
    fi
    log_info "OS: $OS"
    
    # Check CPU cores
    if [[ "$OS" == "Linux" ]]; then
        CPU_COUNT=$(nproc)
    elif [[ "$OS" == "Darwin" ]]; then
        CPU_COUNT=$(sysctl -n hw.ncpu)
    fi
    
    if [[ $CPU_COUNT -lt 2 ]]; then
        log_warning "Low CPU cores: $CPU_COUNT (minimum 2 recommended)"
    else
        log_info "CPU cores: $CPU_COUNT"
    fi
    
    # Check memory
    if [[ "$OS" == "Linux" ]]; then
        TOTAL_MEM=$(free -m | awk '/^Mem:/{print $2}')
    elif [[ "$OS" == "Darwin" ]]; then
        TOTAL_MEM=$(sysctl -n hw.memsize | awk '{print int($1/1024/1024)}')
    fi
    
    if [[ $TOTAL_MEM -lt 4096 ]]; then
        log_warning "Low memory: ${TOTAL_MEM}MB (minimum 4GB recommended)"
    else
        log_info "Memory: ${TOTAL_MEM}MB"
    fi
    
    # Check virtualization support (for Linux)
    if [[ "$OS" == "Linux" ]]; then
        if grep -q -E 'vmx|svm' /proc/cpuinfo; then
            log_info "Virtualization support: Enabled"
        else
            log_warning "Virtualization support not detected. Minikube may run slower."
        fi
    fi
    
    return 0
}

# Function to install required tools
install_tools() {
    log_info "Checking and installing required tools..."
    
    # Check kubectl
    if ! check_command "kubectl"; then
        log_info "Installing kubectl..."
        if [[ "$OS" == "Linux" ]]; then
            curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
            chmod +x kubectl
            sudo mv kubectl /usr/local/bin/
        elif [[ "$OS" == "Darwin" ]]; then
            curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/darwin/amd64/kubectl"
            chmod +x kubectl
            sudo mv kubectl /usr/local/bin/
        fi
    fi
    
    # Check minikube
    if ! check_command "minikube"; then
        log_info "Installing minikube..."
        if [[ "$OS" == "Linux" ]]; then
            curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
            sudo install minikube-linux-amd64 /usr/local/bin/minikube
            rm minikube-linux-amd64
        elif [[ "$OS" == "Darwin" ]]; then
            curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-darwin-amd64
            sudo install minikube-darwin-amd64 /usr/local/bin/minikube
            rm minikube-darwin-amd64
        fi
    fi
    
    # Check docker (or podman)
    if ! check_command "docker" && ! check_command "podman"; then
        log_error "Neither Docker nor Podman found. Please install one of them."
        log_info "For Docker: https://docs.docker.com/get-docker/"
        log_info "For Podman: https://podman.io/getting-started/installation"
        return 1
    fi
    
    log_success "All required tools are available"
    return 0
}

# Function to start Kubernetes cluster
start_cluster() {
    log_info "Starting Kubernetes cluster with minikube..."
    
    # Check if cluster already exists
    if minikube status 2>/dev/null | grep -q "Running"; then
        log_warning "Minikube cluster is already running"
        read -p "Do you want to delete and recreate it? (y/N): " -n 1 -r
        echo
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            log_info "Deleting existing cluster..."
            minikube delete
        else
            log_info "Using existing cluster"
            return 0
        fi
    fi
    
    # Set driver preference
    DRIVER="docker"
    if check_command "podman" && ! check_command "docker"; then
        DRIVER="podman"
    fi
    
    # Start minikube cluster
    log_info "Creating cluster '$CLUSTER_NAME' with driver: $DRIVER"
    
    minikube start \
        --driver="$DRIVER" \
        --kubernetes-version="$K8S_VERSION" \
        --nodes="$NODE_COUNT" \
        --cpus="$CPU" \
        --memory="$MEMORY" \
        --disk-size="$DISK_SIZE" \
        --addons=metrics-server \
        --addons=dashboard \
        --addons=ingress \
        --extra-config=apiserver.service-node-port-range=1-65535
    
    if [[ $? -ne 0 ]]; then
        log_error "Failed to start minikube cluster"
        return 1
    fi
    
    log_success "Kubernetes cluster started successfully"
    return 0
}

# Function to verify cluster is running
verify_cluster() {
    log_info "Verifying cluster status..."
    
    # Check cluster info
    log_info "Cluster information:"
    kubectl cluster-info
    
    if [[ $? -ne 0 ]]; then
        log_error "Failed to get cluster info"
        return 1
    fi
    
    # Check nodes
    log_info "\nNode status:"
    kubectl get nodes -o wide
    
    # Check if nodes are ready
    READY_NODES=$(kubectl get nodes -o jsonpath='{.items[*].status.conditions[?(@.type=="Ready")].status}' | grep -c True)
    TOTAL_NODES=$(kubectl get nodes -o jsonpath='{.items[*].metadata.name}' | wc -w)
    
    if [[ $READY_NODES -eq $TOTAL_NODES ]]; then
        log_success "All $TOTAL_NODES node(s) are ready"
    else
        log_error "Only $READY_NODES out of $TOTAL_NODES node(s) are ready"
        return 1
    fi
    
    return 0
}

# Function to retrieve available pods
get_pods() {
    log_info "Retrieving all pods in the cluster..."
    
    # Get pods from all namespaces
    kubectl get pods --all-namespaces -o wide
    
    if [[ $? -ne 0 ]]; then
        log_error "Failed to get pods"
        return 1
    fi
    
    # Show pod counts by namespace
    log_info "\nPod count by namespace:"
    kubectl get pods --all-namespaces -o jsonpath='{range .items[*]}{.metadata.namespace}{"\n"}{end}' | sort | uniq -c | sort -rn
    
    # Check if system pods are running
    log_info "\nChecking system pods..."
    SYSTEM_PODS=$(kubectl get pods -n kube-system --no-headers | wc -l)
    READY_SYSTEM_PODS=$(kubectl get pods -n kube-system --no-headers | grep -c "Running")
    
    if [[ $READY_SYSTEM_PODS -eq $SYSTEM_PODS ]]; then
        log_success "All $SYSTEM_PODS system pods are running"
    else
        log_warning "$READY_SYSTEM_PODS out of $SYSTEM_PODS system pods are running"
    fi
    
    return 0
}

# Function to setup kubectl alias and autocompletion
setup_kubectl() {
    log_info "Setting up kubectl alias and autocompletion..."
    
    # Create alias for convenience
    if ! grep -q "alias k=kubectl" ~/.bashrc 2>/dev/null && ! grep -q "alias k=kubectl" ~/.zshrc 2>/dev/null; then
        echo 'alias k=kubectl' >> ~/.bashrc
        echo 'alias k=kubectl' >> ~/.zshrc 2>/dev/null || true
        log_info "Added alias: k=kubectl"
    fi
    
    # Setup autocompletion
    if [[ "$SHELL" == *"bash"* ]]; then
        source <(kubectl completion bash)
        echo 'source <(kubectl completion bash)' >> ~/.bashrc
        log_info "Bash autocompletion enabled"
    elif [[ "$SHELL" == *"zsh"* ]]; then
        source <(kubectl completion zsh)
        echo 'source <(kubectl completion zsh)' >> ~/.zshrc
        log_info "Zsh autocompletion enabled"
    fi
    
    log_success "kubectl setup complete"
}

# Function to deploy a sample application for testing
deploy_sample_app() {
    log_info "Deploying sample application for verification..."
    
    # Create a test namespace
    kubectl create namespace test-app --dry-run=client -o yaml | kubectl apply -f -
    
    # Deploy nginx
    kubectl create deployment nginx --image=nginx:alpine -n test-app
    kubectl expose deployment nginx --port=80 --type=NodePort -n test-app
    
    # Wait for pod to be ready
    log_info "Waiting for nginx pod to be ready..."
    kubectl wait --for=condition=ready pod -l app=nginx -n test-app --timeout=60s
    
    if [[ $? -eq 0 ]]; then
        # Get the service URL
        NODE_PORT=$(kubectl get svc nginx -n test-app -o jsonpath='{.spec.ports[0].nodePort}')
        MINIKUBE_IP=$(minikube ip)
        
        log_success "Sample application deployed successfully!"
        log_info "You can access it at: http://$MINIKUBE_IP:$NODE_PORT"
        
        # Test the application
        if curl -s --connect-timeout 5 "http://$MINIKUBE_IP:$NODE_PORT" | grep -q "Welcome to nginx"; then
            log_success "Application is responding correctly"
        else
            log_warning "Application deployed but might not be accessible"
        fi
    else
        log_error "Failed to deploy sample application"
    fi
}

# Function to display cluster dashboard
show_dashboard() {
    log_info "Starting Kubernetes dashboard..."
    
    # Start dashboard in background
    minikube dashboard &
    DASHBOARD_PID=$!
    
    log_info "Dashboard started with PID: $DASHBOARD_PID"
    log_info "Dashboard URL: $(minikube dashboard --url 2>/dev/null)"
    log_info "To stop the dashboard later: kill $DASHBOARD_PID"
}

# Main function
main() {
    echo -e "${BLUE}========================================${NC}"
    echo -e "${BLUE}  Kubernetes Local Cluster Setup Script${NC}"
    echo -e "${BLUE}========================================${NC}"
    
    # Step 1: Check system requirements
    if ! check_system_requirements; then
        log_error "System requirements check failed"
        exit 1
    fi
    
    # Step 2: Install/Check tools
    if ! install_tools; then
        log_error "Tool installation/check failed"
        exit 1
    fi
    
    # Step 3: Start cluster
    if ! start_cluster; then
        log_error "Failed to start cluster"
        exit 1
    fi
    
    # Step 4: Verify cluster
    if ! verify_cluster; then
        log_error "Cluster verification failed"
        exit 1
    fi
    
    # Step 5: Get pods
    if ! get_pods; then
        log_error "Failed to retrieve pods"
        exit 1
    fi
    
    # Step 6: Setup kubectl
    setup_kubectl
    
    # Step 7: Deploy sample app (optional)
    read -p "Do you want to deploy a sample application for testing? (y/N): " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        deploy_sample_app
    fi
    
    # Step 8: Dashboard (optional)
    read -p "Do you want to start the Kubernetes dashboard? (y/N): " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        show_dashboard
    fi
    
    # Display summary
    echo -e "\n${GREEN}========================================${NC}"
    echo -e "${GREEN}         SETUP COMPLETE!               ${NC}"
    echo -e "${GREEN}========================================${NC}"
    echo -e "${BLUE}Cluster Info:${NC}"
    echo -e "  Name: $CLUSTER_NAME"
    echo -e "  Kubernetes Version: $K8S_VERSION"
    echo -e "  Driver: $(minikube config get driver 2>/dev/null || echo 'docker')"
    echo -e "  Nodes: $(kubectl get nodes --no-headers | wc -l)"
    echo -e "\n${BLUE}Useful Commands:${NC}"
    echo -e "  kubectl get nodes"
    echo -e "  kubectl get pods -A"
    echo -e "  minikube dashboard"
    echo -e "  minikube stop"
    echo -e "  minikube delete"
    echo -e "\n${BLUE}Next Steps:${NC}"
    echo -e "  1. Try: kubectl create deployment nginx --image=nginx"
    echo -e "  2. Try: kubectl expose deployment nginx --port=80 --type=NodePort"
    echo -e "  3. Access your cluster with: kubectl get all"
}

# Run main function
main "$@"
